        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Which cities would you prefer?"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/prefCities_chip_grp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:singleSelection="false" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPreferredCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false">


            <AutoCompleteTextView
                android:id="@+id/preferred_city_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/roboto_medium"
                android:hint="Search cities"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/roboto_regular"
            android:text="How did you get to know about this app?"
            android:textColor="@color/black"
            android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinnerRefVia"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="start"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/roboto_medium"
                android:hint="Referred Via"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textSize="16sp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:cornerRadius="5dp" />

    </LinearLayout>

</ScrollView>